<div class="row mt-5">
  <div class="col-md-7 m-auto">
    <div class="card card-body ">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <p class="text-center mb-3">Please enter your information here</p>

      <form action="/user-register" method="POST" enctype="multipart/form-data">
        <div class="form-group ">
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Full Name"
          />
        </div>

        <div class="form-group">
          <input
            type="text"
            id="rollNo"
            name="rollNo"
            required
            class="form-control"
            placeholder="Roll No."
          />
        </div>

        <div class="row">
          <div class="form-group col-md-4">
            <select name="course" id="course" class="form-control">
              <option value="none" selected>Course</option>
            </select>
          </div>

          <div class="form-group col-md-4">
            <select name="branch" id="branch" class="form-control">
              <option value="none">Branch</option>
            </select>
          </div>

          <div class="form-group col-md-4">
            <select name="year" id="year" class="form-control">
              <option value="none" selected>Year</option>
            </select>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-md-6">
            <input
              type="text"
              id="contact"
              name="contact"
              class="form-control"
              placeholder="Contact No."
            />
          </div>

          <div class="form-group col-md-6">
            <input
              type="text"
              id="email"
              name="email"
              class="form-control"
              placeholder="E-Mail Id"
            />
          </div>
        </div>

        <div class="form-group">
          <input
            type="text"
            id="areaOfInterest"
            name="areaOfInterest"
            class="form-control"
            placeholder="Area of Interest"
          />
        </div>

        <div class="row">
          <div class="form-group col-md-6">
            <input
              type="text"
              id="nameOfSociety"
              name="nameOfSociety"
              class="form-control"
              placeholder="Name of Society"
            />
          </div>

          <div class="form-group col-md-6">
            <select
              name="typeOfSociety"
              id="typeOfSociety"
              class="form-control"
            >
              <option value="none">Type of Society</option>
              <option value="1">item1</option>
              <option value="2">item2</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <input type="file" id="icard" name="icard" class="form-control" />
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-dark btn-block">
            Register
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
